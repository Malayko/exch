%h1= t(".create_invoice")

= form_for @invoice do |f|
  = errors_for @invoice, :message => "invoices.new.error"

  .form-field
    = f.label :merchant_reference
    = f.text_field :merchant_reference

  .form-field
    = f.label :amount
    = f.text_field :amount, :class => "amount"
    .explanation= t(".amount_explanation")

  .form-field
    = f.label :merchant_memo
    = f.text_area :merchant_memo, :rows => 5

  .form-field
    = f.label :callback_url
    = f.text_field :callback_url
    .explanation= t(".callback_url_explanation")

  .form-field
    = f.label :item_url
    = f.text_field :item_url
    .explanation= t(".item_url_explanation")

  .form-field
    = f.submit t(".submit"), :class => 'submit'