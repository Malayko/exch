%h1= t(".title")

= form_for [current_user, @bank_account], :url => user_bank_accounts_path do |f|
  = errors_for @bank_account, :message => "bank_accounts.index.error"
  = render :partial => 'bank_accounts/fieldsbr', :locals => { :form_builder => f }
  .form-field
    = f.submit t(".submit"), :class => 'submit'

%br

%h1= t("activerecord.models.bank_account.other")
= render :partial => 'bank_accounts/list', :locals => { :bank_accounts => @bank_accounts }
