<% if model.errors.any? %>
  <div id="errors">
    <h2>
      <% if translated_message %>
        <%= translated_message %>
      <% else %>
        <%= t message, :count => model.errors.count %>
      <% end  %>
    </h2>

    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>